

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
  </tr>

  <% object.each do |article| %>
  <tr>
    <td> <%= link_to article.title,article_path(article)%> </td>
    <td> <%= article.description %> </td>
    <td><% if logged_in? && (current_user == article.user || current_user.admin?) %> </td>  
      <td><%= link_to "Edit",edit_article_path(article),class: "btn btn-primary"%></td>
      <td><%= link_to "Delete",article_path(article), method: :delete, data: {confirm: "Are u sure "},class: "btn btn-primary" %></td>
    <td><% end %></td>
    <td>Created by: <%= article.user.username if article.user %></td>
    <td>Created : <%= time_ago_in_words(article.created_at) %> ago</td>
    <td>updated : <%= time_ago_in_words(article.updated_at) %> ago</td>
  </tr>
  <% end %>
</table>
